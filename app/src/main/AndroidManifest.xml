<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.maxkohl.gotimer">

    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS" />
    <uses-permission android:name="android.permission.ACTION_MANAGE_OVERLAY_PERMISSION" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_gotime_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_gotime_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.maxkohl.gotimer.util.TransparentActivity"
            android:theme="@style/Theme.Transparent"></activity>
        <activity
            android:name="com.maxkohl.gotimer.ui.appselector.AppSelectorActivity"
            android:parentActivityName="com.maxkohl.gotimer.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.maxkohl.gotimer.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.maxkohl.gotimer.services.OverlayService" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAcXQksbBt1lb6o7uAKZUozwYXURxaTK60"/>
    </application>

</manifest>